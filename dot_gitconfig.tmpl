[init]
	defaultBranch = main
[fetch]
	prune = true
[user]
	name = {{ .name }}
	email = {{ .email }}
[core]
  pager = delta
{{- if eq .chezmoi.os "windows" }}
  autocrlf = true
{{- else }}
  autocrlf = input
{{- end }}
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true  # use n and N to move between diff sections
  dark = true      # or light = true, or omit for auto-detection
[merge]
  conflictStyle = zdiff3
[credential]
{{- if eq .chezmoi.os "windows" }}
  helper = manager-core
{{- else }}
  helper = cache --timeout=86400 # seconds
{{- end }}
